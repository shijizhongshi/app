    @RequestMapping(value="/profit",method=RequestMethod.GET)	
    public Results<UserAdd> singleUserAdd(@RequestParam(name="username",required=true) String username) throws ParseException{
	
	Results<UserAdd> result = new Results<UserAdd>();
	User user = new User();
	user.setMobile(username);
	
	user = userDao.singleUser(user);
	
	
	if(user!=null){
	    UserAdd userAdd = new UserAdd();
	    List<User> listpower = userDao.powerList(null, 0,1, 0, 0, null, null,user.getMobile());//该用户推荐的总的合伙人的集合
	    
	        Calendar cal=Calendar.getInstance();
	        
	        Calendar calendar = Calendar.getInstance();
	        calendar.setTime(new Date());
	        calendar.set(Calendar.HOUR_OF_DAY, 0);
                calendar.set(Calendar.MINUTE, 0);
                calendar.set(Calendar.SECOND, 0);
                Date zero = calendar.getTime();
		//今日新增
		//int todaysadd = userDao.powercount(user.getInvitationCode(), 0,0,zero, new Date(), null);
                int todaysadd =userDao.countUserAdd(zero, new Date(), user.getId());
                int todaysaddt =  userDao.sumTotal(zero, new Date(), 1, user.getId());
		int referrertodaysadd =0;
		int retodaysaddt =0;
		for (User user2 : listpower)
		{
		    //int childCountz = userDao.powercount(user2.getInvitationCode(), 0,0, zero, new Date(),null);
		    int childCountz =userDao.countUserAdd(zero, new Date(), user2.getId());
		    referrertodaysadd+=childCountz;
		    retodaysaddt+=userDao.sumTotal(zero, new Date(), 2, user2.getId());
		}
		
		//上周新增
		Calendar date=Calendar.getInstance(Locale.CHINA);

		date.setFirstDayOfWeek(Calendar.MONDAY);//将每周第一天设为星期一，默认是星期天

		date.add(Calendar.WEEK_OF_MONTH,-1);//周数减一，即上周

		date.set(Calendar.DAY_OF_WEEK, Calendar.SUNDAY);//日子设为星期天
		
		date.set(Calendar.HOUR_OF_DAY, 0);
		date.set(Calendar.MINUTE, 0);
		date.set(Calendar.SECOND, 0);
		
		 Calendar c = Calendar.getInstance();  
		 c.setTime(date.getTime());
		 c.add(c.DAY_OF_WEEK, - 6);
		 c.set(Calendar.HOUR_OF_DAY, 0);
		 c.set(Calendar.MINUTE, 0);
		 c.set(Calendar.SECOND, 0);
		 Date monday = c.getTime();
		///int lastweekadd = userDao.powercount(user.getInvitationCode(), 0,0,c.getTime(), date.getTime(), null);
		 int lastweekadd = userDao.countUserAdd(c.getTime(), date.getTime(), user.getId());
		 int lastweekaddt =  userDao.sumTotal(c.getTime(), date.getTime(), 1, user.getId());
		 int relastweekaddt=0;
		 int referrerlastweekadd =0;
		for (User user2 : listpower)
		{
		    //int childCountz = userDao.powercount(user2.getInvitationCode(), 0,0, c.getTime(),date.getTime(),null);
		    int childCountz = userDao.countUserAdd(c.getTime(), date.getTime(), user2.getId());
		    referrerlastweekadd+=childCountz;
		    relastweekaddt+=userDao.sumTotal(c.getTime(), date.getTime(), 2, user2.getId());
		}
		
		
		
		
		//本月新增
		cal.add(Calendar.MONTH, 0);
		cal.set(Calendar.DAY_OF_MONTH,1);
		cal.set(Calendar.HOUR_OF_DAY, 0);
		cal.set(Calendar.MINUTE, 0);
		cal.set(Calendar.SECOND, 0);
		//int thismonthadd = userDao.powercount(user.getInvitationCode(), 0,0,cal.getTime(), new Date(), null);
		int thismonthadd = userDao.countUserAdd(cal.getTime(), new Date(), user.getId());
		
		int thismonthaddt =  userDao.sumTotal(cal.getTime(), new Date(), 1, user.getId());
		int rethismonthaddt=0;
		int referrerthismonthadd =0;
		for (User user2 : listpower)
		{
		    //int childCountz = userDao.powercount(user2.getInvitationCode(), 0,0, cal.getTime(), new Date(),null);
		    int childCountz = userDao.countUserAdd(cal.getTime(), new Date(), user2.getId());
		    referrerthismonthadd+=childCountz;
		    
		    rethismonthaddt+=userDao.sumTotal(cal.getTime(), new Date(), 2, user2.getId());
		}
		
		/////累计店主
		
		
		int totalshop = userDao.countUserAdd(null, null, user.getId());
		int totalshopt=userDao.sumTotal(null, null, 1, user.getId());
		int retotalshopt=0;
		int referrertotalshop =0;
		for (User user2 : listpower)
		{
		    int childCountz = userDao.countUserAdd(null, null, user2.getId());
		    referrertotalshop+=childCountz;
		    retotalshopt+=userDao.sumTotal(null, null, 2, user2.getId());
		}
		
		
		userAdd.setUserId(user.getId());
		userAdd.setTodaysadd(todaysadd);
		userAdd.setLastweekadd(lastweekadd);
		userAdd.setThismonthadd(thismonthadd);
		userAdd.setTotalshop(totalshop);
		userAdd.setReferrertodaysadd(referrertodaysadd);
		userAdd.setReferrerlastweekadd(referrerlastweekadd);
		userAdd.setReferrerthismonthadd(referrerthismonthadd);
		userAdd.setReferrertotalshop(referrertotalshop);
		
		
		
		//今天的收益
		int itodaytotal=todaysaddt+retodaysaddt;
	
		userAdd.setTodaytotal(getTotal(itodaytotal));
		
		//上周的收益
		int ilastweektotal=lastweekaddt+relastweekaddt;
		
		userAdd.setLastweektotal(getTotal(ilastweektotal));
		
		//这个月的收益
		int ithismonthtotal=thismonthaddt+rethismonthaddt;
		
		userAdd.setThismonthtotal(getTotal(ithismonthtotal));
		
		//累计的收益
		int ishoptotal=retotalshopt+totalshopt;
		
		userAdd.setShoptotal(getTotal(ishoptotal));
		
		
		
		
	    
	    userAdd.setNickName(user.getNickName());
	    userAdd.setHeadImgUrl(user.getHeadImgUrl());
	    
	    if(user.getPowerUser()==1){
		userAdd.setIdentity("合伙人");
	    }
	    
	    result.setData(userAdd);
	    result.setStatus("0");
	    return result;
	}
	result.setStatus("1");
	result.setMessage("登录过期，重新登录");
	return result;
    }
    
    
    
    
    
    
    public static String getTotal(int total){
	
	String shoptotal;
	
	if(total>=10000 && total<100000000){
	    shoptotal = String.valueOf((double)total/(double)10000)+"万";
	}else if(total>=100000000){
	    shoptotal = String.valueOf((double)total/(double)100000000)+"亿";
	}else{
	    shoptotal=String.valueOf(total);
	}
	
	return shoptotal;
	
    }
    
      

